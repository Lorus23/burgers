<h2>Список пользователей:</h2>
<table border="2">
    <tr>
        <th>Имя пользователя</th>
        <th>Электронная почта</th>
        <th>Телефон</th>
    </tr>
    {% for users in data %}
        <tr>
            <td>{{ users.username }}</td>
            <td>{{ users.email }}</td>
            <td>{{ users.phone }}</td>
        </tr>
    {% endfor %}
</table>

<br>
<h2>Список заказов:</h2>
<table>
    <tr>
        <th>Имя пользователя</th>
        <th>Улица</th>
        <th>Дом</th>
        <th>Корпус</th>
        <th>Квартира</th>
        <th>Этаж</th>
        <th>Комментарий</th>
        <th>Потребуется сдача</th>
        <th>Оплата по карте</th>
        <th>Не перезванивать</th>
    </tr>
     {% for orders in data %}
        <tr>
            <td>{{ orders.user_id }}</td>
            <td>{{ orders.street }}</td>
            <td>{{ orders.home }}</td>
            <td>{{ orders.part }}</td>
            <td>{{ orders.appt }}</td>
            <td>{{ orders.floor }}</td>
            <td>{{ orders.comment }}</td>
            <td>{{ orders.payment1 }}</td>
            <td>{{ orders.payment2 }}</td>
            <td>{{ orders.callback }}</td>
        </tr>
    {% endfor %}
</table>